<div class="container text-center">
<h1 class="w-color">アカウント編集</h1>
<div class="text-danger">
<% @user.errors.full_messages.each do |message| %>
    <%= message %>
<% end %>
</div>
<%= form_tag("/users/#{@user.id}/update",{multipart: true}) do%>
<p><span class="w-color">名前</span></p>
<input name="name" value="<%= @user.name %>"><br><br>

<p><span class="w-color">画像</span></p>
<input name ="image" type="file"><br><br>

<p><span class="w-color">パスワード</span></p>
<input name="password" value="<%= @user.password %>"><br><br>

<p><span class="w-color">日本一周後何をしているの？</span></p>
<textarea name="career"  rows="15" class="w-100""><%= @user.career %></textarea><br><br>

<input type="submit" value="保存" class="btn btn-primary">
<% end %>

</div>